<ol class="items-list effects-list">
    {{#each actor.system.effects as |section sid|}}
    <div class="flexcol effect-section">
        <h3 class="item-name effect-name flexrow">{{sid}}</h3>
        <li class="items-header flexrow" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}">
            <div class="effect-source">Name</div>
            <div class="effect-source">Source</div>
            <div class="effect-source">Duration</div>
            <div class="item-controls effect-controls flexrow">
                <a class="effect-control" data-action="create" title="Create New Effect">
                    <i class="fas fa-plus"></i> Create New Effect
                </a>
            </div>
        </li>

        <ol class="item-list">
            {{#each section as |effect|}}
            <li class="item effect flexrow" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
                <div class="item-name">
                    <img class="effect-image" src="{{effect.img}}" />
                    <h4 class="effect-name">{{effect.name}}</h4>
                </div>
                <div class="effect-source">{{effect.sourceName}}</div>
                <div class="effect-duration">{{#if effect.duration.rounds}} {{effect.duration.rounds}} rounds{{/if}}</div>
                <div class="effect-controls">
                    <a class="effect-control" data-action="toggle" title="disable/enable">
                        <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                    </a>
                    <a class="effect-control" data-action="edit" title="edit">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="effect-control" data-action="delete" title="delete">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    {{/each}}
</ol>